{
    "name": "intent/framework",
    "description": "AI-native, zero-boilerplate PHP framework",
    "type": "project",
    "license": "MIT",
    "require": {
        "php": "^8.2"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0",
        "phpstan/phpstan": "^2.1"
    },
    "autoload": {
        "psr-4": {
            "Core\\": "core/",
            "App\\": "app/"
        },
        "files": [
            "helpers.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit --colors=always",
        "test:coverage": "phpunit --coverage-text",
        "analyse": "phpstan analyse --no-progress",
        "check": ["@test", "@analyse"]
    }
}
