{
    "name": "intent/framework",
    "description": "AI-native, zero-boilerplate PHP framework",
    "type": "project",
    "license": "MIT",
    "require": {
        "php": "^8.2"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0",
        "phpstan/phpstan": "^2.1",
        "infection/infection": "^0.32.0"
    },
    "autoload": {
        "psr-4": {
            "Core\\": "src/Core/",
            "App\\": "app/"
        },
        "files": [
            "src/helpers.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit --colors=always",
        "test:coverage": "phpunit --coverage-text",
        "analyse": "phpstan analyse --no-progress",
        "infection": "infection --threads=4",
        "check": [
            "@test",
            "@analyse"
        ]
    },
    "config": {
        "allow-plugins": {
            "infection/extension-installer": true
        }
    }
}