parameters:
    level: 8
    paths:
        - src/Core
        - app
        - src/helpers.php
    excludePaths:
        - vendor
    bootstrapFiles:
        - phpstan-bootstrap.php
    reportUnmatchedIgnoredErrors: false
    ignoreErrors:
        # Ignore missing array value types (would require extensive PHPDoc)
        - identifier: missingType.iterableValue
        - identifier: missingType.generics
        # Allow unused class constants (documentation)
        - identifier: classConstant.unused
        # Allow return type issues (we use mixed returns intentionally)
        - identifier: return.unusedType
        - identifier: return.type
        # Allow defensive null coalesce usage
        - identifier: nullCoalesce.offset
        # Allow flexible argument and property types
        - identifier: argument.type
        - identifier: assign.propertyType
        # Allow foreach on mixed types (validated at runtime)
        - identifier: foreach.nonIterable
        # Twig is an optional dependency - classes only used inside class_exists() check
        - identifier: class.notFound

